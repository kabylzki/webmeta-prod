{% extends "WebMetaCommonBundle::layout.html.twig" %}


{% block content %}
    {% for renc in liste_Rencontre %}
        <div class="row">
            <div class="row">
                <div class="col-md-2 struct">{{ renc.getIdEquipe1() }}</div>
            </div>
            <div class="row">
                <div class="col-md-2 struct">{{ renc.getIdEquipe2() }}</div>
            </div>
        </div>
        {% if loop.index != liste_Rencontre |length and loop.index != (liste_Rencontre|length / 2) %}

            <div class="row">
                <div class="row">
                    <div class="col-md-2 col-md-offset-3 struct">demi finale</div>
                </div>
                <div class="row">
                    <div class="col-md-2 col-md-offset-3 struct">demi finale</div>
                </div>
            </div>
        {% endif %}

        {% if loop.index == (liste_Rencontre|length / 2) %}
            <div class="row">
                <div class="col-md-2 col-md-offset-6 struct">finale</div>
            </div>
        {% endif %}

    {% endfor %}

    {# Messages - (Notice, Erreur) #}
    {% include 'WebMetaCommonBundle:Default:message.html.twig' %}
    {{ form(form) }}
{% endblock %}