{% block sidebar %} 
    <h1>Menu</h1>

    <ul>
        <li> <a href="{{ path('warbot_documentation') }}" title="Documentation de Warbot"/>Documentation - Warbot</a></li>
        {% for page in liste_page %}
            <li><a href="{{ path('page_view', {'id': page.getId, 'url_alias': page.getUrlAlias, 'nom_categorie': page.getNomCategorie|lower|replace({ (' '): '' })}) }}" title="{{page.getNomLien}}"/>{{page.getNomLien}}</a></li>
        {% endfor %}
    </ul>
    
    <h3>Tournois </h3>
    <ul>
        {% if user_connected  %}
            <li><a href="{{ path('tournoi_warbot') }}" title="Accéder à la liste des tournois">Liste des tournois</a></li>
        {% endif %}
    </ul>
{% endblock %}